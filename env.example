# Legal Chatbot Environment Configuration

# Cloud Run: set PORT (default 8080). Backend listens on 0.0.0.0:PORT.
# Frontend: set API_BASE_URL to backend URL, FRONTEND_PUBLIC_URL to this app's public URL (OAuth).

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true

# Database Configuration (required: set DATABASE_URL; REDIS_URL optional)
DATABASE_URL=
REDIS_URL=

# Vector Database
VECTOR_DB_URL=http://localhost:6333
VECTOR_DB_COLLECTION=legal_documents

# OpenAI Configuration (set OPENAI_API_KEY for LLM/embeddings)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Embedding Configuration
# Disable local (SentenceTransformer/PyTorch) embeddings in chat; use OpenAI or TF-IDF. Default true in dev to avoid segfaults.
DISABLE_LOCAL_EMBEDDINGS=true
# Single embedding model: text-embedding-3-large (3072 dimensions). FAISS index must match.
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSION=3072
EMBEDDING_BATCH_SIZE=32

# Retrieval Configuration
TOP_K_RETRIEVAL=10
SIMILARITY_THRESHOLD=0.7
RERANK_TOP_K=5

# Security Configuration (required: JWT_SECRET_KEY or JWT_SECRET; SECRET_KEY if used)
SECRET_KEY=
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth2 Configuration (optional; set client id/secret per provider)
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
OAUTH_GITHUB_CLIENT_ID=
OAUTH_GITHUB_CLIENT_SECRET=
OAUTH_MICROSOFT_CLIENT_ID=
OAUTH_MICROSOFT_CLIENT_SECRET=
OAUTH_MICROSOFT_TENANT_ID=common
OAUTH_REDIRECT_URI=http://localhost:8501/auth/callback

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8501"]
CORS_METHODS=["GET", "POST", "PUT", "DELETE"]
CORS_HEADERS=["*"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/legal_chatbot.log

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=["pdf", "docx", "txt"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour

# Privacy Configuration
PII_REDACTION=true
DATA_RETENTION_DAYS=90
ANONYMIZE_LOGS=true

# Development Configuration
DEBUG=true
ENVIRONMENT=development
